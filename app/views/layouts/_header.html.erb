<header class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <nav>
           <div class="navbar-header">
              <%= link_to root_path, class: "navbar-brand" do %>
                <%= image_tag "main-logo.png" %>
              <% end %>
            </div>
            <ul class="nav navbar-nav navbar-right">
              <% if logged_in? %>
                  <li><%= link_to "みんなのレシピ", recipes_path(recipe: { is_public: true }) %></li>
                  <li><%= link_to "お気に入りレシピ", starred_recipes_path(recipe: { is_public: true }) %></li>
                  <li><%= link_to "レシピの作成", new_recipe_path %></li>
                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span>
                        <%= current_user.name.blank? ? current_user.email : current_user.name %>
                        <b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu">
                          <li><%= link_to "アカウント情報", edit_user_path(current_user) %></li>
                          <li><%= link_to "ログアウト", logout_path, method: "delete" %></li>
                      </ul>
                  </li>
              <% else %>
                  <li><%= link_to "ホーム", root_path %></li>
                  <li><%= link_to "みんなのレシピ", recipes_path(recipe: { is_public: true }) %></li>
                  <li><%= link_to "ログイン", login_path %></li>
              <% end %>
            </ul>
        </nav>
    </div>
</header>
