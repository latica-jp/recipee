<div class="recipe-indegredient item">
    <div class="row">
        <div class="form-group">
            <%= f.hidden_field :id %>
            <div class="col-md-1 control-label">
                <span class="badge row_order"><%= f.object.row_order %></span>
                <%= f.hidden_field :row_order, class:"row_order" %>
            </div>
            <div class="col-md-5">
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <%= f.label "数量", class: "col-md-1 col-sd-12 control-label" %>
            <div class="col-md-4">
                <%= f.text_field :quantity_for, class: "form-control" %>
            </div>
            <div class="col-md-1">
                <%= link_to_remove_field "削除", f %>
            </div>
        </div>
    </div>
</div>